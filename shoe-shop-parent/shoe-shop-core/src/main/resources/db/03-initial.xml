<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="inc-001" author="rc">
        <createTable tableName="products">
            <column name="id" type="long">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_code" type="varchar(100)">
                <constraints nullable="false"/>
            </column>            
            <column name="product_num" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="product_desc" type="varchar(250)">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="creation_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="created_by_user" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by_user" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addAutoIncrement catalogName="cat"
                          columnDataType="long"
                          columnName="id"
                          incrementBy="1"
                          startWith="100"
                          tableName="products"/>
        <addUniqueConstraint catalogName="cat"
                             columnNames="product_code"
                             constraintName="uk_product_code"
                             tableName="products"
                             tablespace="A String"/>
        <addForeignKeyConstraint baseColumnNames="created_by_user"
                                 baseTableName="products"
                                 constraintName="fk_products_created_by_user"
                                 onDelete="NO ACTION"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="username"
                                 referencedTableName="users"/>
        <addForeignKeyConstraint baseColumnNames="modified_by_user"
                                 baseTableName="products"
                                 constraintName="fk_products_modified_by_user"
                                 onDelete="NO ACTION"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="username"
                                 referencedTableName="users"/>
        <createTable tableName="product_sizes">
            <column name="id" type="long">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_code" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="creation_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="created_by_user" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by_user" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addAutoIncrement catalogName="cat"
                          columnDataType="long"
                          columnName="id"
                          incrementBy="1"
                          startWith="100"
                          tableName="product_sizes"/>
        <addUniqueConstraint catalogName="cat"
                             columnNames="product_code, size"
                             constraintName="uk_product_size"
                             tableName="product_sizes"
                             tablespace="A String"/>
        <addForeignKeyConstraint baseColumnNames="product_code"
                                 baseTableName="product_sizes"
                                 constraintName="fk_products_product_sizes"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="product_code"
                                 referencedTableName="products"/>            
        <addForeignKeyConstraint baseColumnNames="created_by_user"
                                 baseTableName="product_sizes"
                                 constraintName="fk_product_sizes_created_by_user"
                                 onDelete="NO ACTION"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="username"
                                 referencedTableName="users"/>
        <addForeignKeyConstraint baseColumnNames="modified_by_user"
                                 baseTableName="product_sizes"
                                 constraintName="fk_product_sizes_modified_by_user"
                                 onDelete="NO ACTION"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="username"
                                 referencedTableName="users"/>
        <createTable tableName="product_quantity_history">
            <column name="id" type="long">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_code" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="creation_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="created_by_user" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by_user" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addAutoIncrement catalogName="cat"
                          columnDataType="long"
                          columnName="id"
                          incrementBy="1"
                          startWith="100"
                          tableName="product_quantity_history"/>
        <addForeignKeyConstraint baseColumnNames="product_code, size"
                                 baseTableName="product_quantity_history"
                                 constraintName="fk_product_sizes_product_quantity_history"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="product_code, size"
                                 referencedTableName="product_sizes"/>
        <createView catalogName="cat"
                    replaceIfExists="true"
                    schemaName="public"
                    viewName="v_products">
            select pr.*, coalesce(cast(sum(pqh.quantity) as int),0) as quantity from products as pr left outer join product_quantity_history as pqh on pr.product_code = pqh.product_code group by pr.product_code
        </createView>
    </changeSet>
</databaseChangeLog>
