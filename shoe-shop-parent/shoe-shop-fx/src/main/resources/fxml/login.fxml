<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>

<MigPane id="loginPane" fx:controller="com.rcs.shoe.shop.fx.controller.ui.LoginController"
        styleClass="main-panel"
        layout="insets 20"
        cols="[label, pref!][grow, 50::]"
        rows=""
        xmlns:fx="http://javafx.com/fxml">
    
    <Label text="%label.username" />
    <TextField fx:id="usernameField" prefColumnCount="30" MigPane.cc="growx, wrap" />
    <Label text="%label.password"/>
    <PasswordField fx:id="passwordField" prefColumnCount="30" MigPane.cc="growx, wrap" />

    <Button text="%button.login" onAction="#tryLogin" MigPane.cc="skip, gap :push, gaptop 15, wrap" />
    

    <Label fx:id="messageLabel" styleClass="hello-message" MigPane.cc="span, growx, gaptop 15" />

</MigPane>